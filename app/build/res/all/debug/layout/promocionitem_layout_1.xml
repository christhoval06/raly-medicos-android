<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imagen_promocion"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:contentDescription="@string/imagen_promocion"
        android:maxHeight="100dp"
        android:maxWidth="150dp"
        android:padding="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/titulo_promocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/main_promocion_title_size"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/precio_promocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/forest_green"
            android:textSize="@dimen/main_promocion_precio_size"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/cbarba/AndroidStudioProjects/androidralymedicosv21/app/src/main/res/layout/promocionitem_layout_1.xml -->